extends layouts/main

block content
    div.video__player
        video(src=`/${video.fileUrl}`, controls=true)
    div.video__info
        a(href=routes.editVideo(video.id)) Edit Video
        h5.video__title= video.title
        span.video__views= video.view
        p.video__description= video.description
    div.video__comments
        if video.comments.length === 1
            span.video__comments-number 1 comment
        else
            span.video__comments-number #{video.comments.length} comments